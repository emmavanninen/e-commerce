<!DOCTYPE html>
<html>

<% include ../partials/account %>
<link rel="stylesheet" href="/stylesheets/style.css" />
<body>

    <% include ../partials/nav %>
    <br>

<% if(data.length) { %>
    <h3>Results for <span style="color: red;"></span></h3>
    <div class="row">
        <% for (let i of data) {%>
        <div class="col">
            <div class="card" style="width: 18rem;">
                <a href="/api/product/">
                    <img class="card-img-top" src="<%= i._source.image %>" alt="Card image cap" />
                </a>
                <div class="card-body">
                    <h5 class="card-title">Name: <%= i._source.name %></h5>
                    <p class="card-text">Category: <%= i._source.category.name %></p>
                    <p class="card-text">Price: $ <%= i._source.price %></p>
                    <a href="/api/product/<%= i.id %>" class="btn btn-primary">Shop</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>
<% } else { %>

    <h3>Search not found</h3>

    <% } %>
    <% include ../partials/footer %>
</body>

</html>