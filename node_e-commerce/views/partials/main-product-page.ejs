<div class="jumbotron">
    <div class="container">
        <h1 class="display-3 text-center">Worst Online Shopping</h1>
    </div>
</div>

<div class="row" id="productSearchResults">
<% for (let i of products) {%>
    <div class="col">
        <div class="card">
            <a href="/api/products/<%= i.id %>">
                <img class="card-img-top" src="<%= i.image %>" alt="Card image cap" />
            </a>
            <div class="card-body">
                <h5 class="card-title">Name:<%= i.name %> </h5>
                <p class="card-text">Category:<%= i.category.name %> </p>
                <p class="card-text">$<%= i.price %></p>
                <a href="/api/products/<%= i.id %>" class="btn btn-primary">Shop</a>
            </div>
        </div>
    </div>
<% } %>
</div>

